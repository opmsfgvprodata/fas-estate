@{
    ViewBag.Title = ViewBag.TitleReport;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "Get",
        UpdateTargetId = "searchResult",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading"
    };
}
<script src="~/Asset/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div id="divLoading" style="display:none;">
    <div class="progressTest">
        <label>
            @GlobalResEstate.msgWait
        </label>
    </div>
</div>


<section class="content-wrapper main-content clear-fix">
    <div class="well bottom" style="padding-bottom:16px;">
        @using (Ajax.BeginForm("_LprnBlnnByrnAktvt", "Report2", null, options, new { @id = "RptSearch" }))
        {
            @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1" id="divlist">
                    <label>Tahun</label>
                    @Html.DropDownList("YearList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-1" id="divlist">
                    <label>Dari</label>
                    @Html.DropDownList("MonthList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-1" id="divlist">
                    <label>Hingga</label>
                    @Html.DropDownList("MonthList2", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-1" id="divlist">
                    <label>Kod Pusat</label>
                    @Html.DropDownList("Costcnt", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-1" id="divlist">
                    <label>Peringkat</label>
                    @Html.DropDownList("allPeringkatList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-1" id="divlist">
                    <label>Kumpulan</label>
                    @Html.DropDownList("GroupList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-2" id="divlist">
                    <label>Pekerja</label>
                    @Html.DropDownList("SelectionList", null, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="col-sm-1">
                    @Html.RadioButton("RadioGroup", 0, new { @checked = "checked" })
                    <label>Kuantiti</label><br />
                    @Html.RadioButton("RadioGroup", 1)
                    <label>Harga</label>
                </div>
                <div class="col-sm-1" style="padding-top:25px;">
                    <input class="btn btn-primary btn-block" type="submit" name="Lihat" id="btnSubmit" value="@GlobalResEstate.btnView" />
                </div>
            </div>

        </div>
            <div class="form-group">
                <div class="row">
                 

                </div>












        </div>
       
            }
        </div>
            <div class="well" style="margin-top:7px;">
                <div class="panel panel-primary">
                    <div class="panel-heading">@ViewBag.TitleReport.ToUpper()</div>
                    <div class="panel-body">
                        <div id="searchResult">
                            <div id="scrollArea2" class="modal-body" style="text-align: center">
                                <p style="color: red">Please select the selection and click view button.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</section>
