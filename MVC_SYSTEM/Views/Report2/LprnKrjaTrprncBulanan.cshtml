@{
    ViewBag.Title = ViewBag.TitleReport;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "Get",
        UpdateTargetId = "searchResult",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading"
    };
}
<script src="~/Asset/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div id="divLoading" style="display:none;">
    <div class="progressTest">
        <label>
            @GlobalResEstate.msgWait
        </label>
    </div>
</div>


<section class="content-wrapper main-content clear-fix">
    <div class="well bottom" style="padding-bottom:16px;">
        @using (Ajax.BeginForm("_LprnKrjaTrprncBulanan", "Report2", null, options, new { @id = "RptSearch" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1" id="divlist">
                        <label>Tahun</label>
                        @Html.DropDownList("YearList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1" id="divlist">
                        <label>Dari</label>
                        @Html.DropDownList("MonthList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1" id="divlist">
                        <label>Hingga</label>
                        @Html.DropDownList("MonthList2", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2" id="divlist">
                        <label>Jenis Laporan</label>
                        @Html.DropDownList("Option", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="col-sm-1">
                        @Html.RadioButton("Selection1", 0, new { @checked = "checked" })
                        <label>Harga</label><br />
                        @Html.RadioButton("Selection1", 1)
                        <label>Kuantiti</label>
                    </div>
                    <div class="col-sm-4">
                        <div class="row">
                            <div class="col-sm-4">
                                @Html.CheckBox("Selection21", new { @checked = "checked" })
                                <label>KONG</label><br />
                                @Html.CheckBox("Selection24", new { @checked = "checked" })
                                <label>PIECE-RATE</label><br />
                            </div>
                            <div class="col-sm-4">
                                @Html.CheckBox("Selection22", new { @checked = "checked" })
                                <label>OT</label><br />
                                @Html.CheckBox("Selection25", new { @checked = "checked" })
                                <label>INCENTIVE</label><br />

                            </div>
                            <div class="col-sm-4">
                                @Html.CheckBox("Selection23", new { @checked = "checked" })
                                <label>OTHERS</label><br />
                                @Html.CheckBox("Selection26", new { @checked = "checked" })
                                <label>DEDUCTION</label><br />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1" style="padding-top:25px;">
                        <input class="btn btn-primary btn-block" type="submit" name="Lihat" id="btnSubmit" value="@GlobalResEstate.btnView" />
                    </div>
                </div>
               
            </div>
        }
    </div>
    <div class="well" style="margin-top:7px;">
        <div class="panel panel-primary">
            <div class="panel-heading">@ViewBag.TitleReport.ToUpper()</div>
            <div class="panel-body">
                <div id="searchResult">
                    <div id="scrollArea2" class="modal-body" style="text-align: center">
                        <p style="color: red">Please select the selection and click view button.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
